<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText android:hint="Nome" android:id="@+id/formulario_nome"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                <EditText android:hint="EndereÃ§o" android:id="@+id/formulario_endereco"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                <EditText android:hint="Telefone" android:id="@+id/formulario_telefone"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />
                <EditText android:hint="Site" android:id="@+id/formulario_site"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content" />

                <RatingBar android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:numStars="5"
                           android:layout_gravity="center"
                           android:max="10"
                           android:id="@+id/formulario_nota"
                />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Salvar" android:id="@+id/formulario_salvar"
                 />

        </LinearLayout>
</ScrollView>